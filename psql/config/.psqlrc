-- Completion case configuration
\set QUIET ON
\set COMP_KEYWORD_CASE upper

-- Configuring line and table border
\pset linestyle unicode
\pset border 2
\pset pager always
\pset null †

-- Editor settings
\setenv PSQL_EDITOR_LINENUMBER_ARG '+'
\setenv PSQL_EDITOR 'vim +"set syntax=pgsql" '
\set QUIET OFF

-- Development tools:
\set sp 'SHOW search_path;'
\set clear '\\! clear;'
\set cl '\\! clear;'
\set ls '\\! ls -lrt;'

\set PROMPT1 '%[%033[90m%]%n%[%033[1;35m%]@%[%033[1;35m%]%M:%>%[%033[34m%]/%/ %[%033[1;35m%]➤%[%033[0m%] '

